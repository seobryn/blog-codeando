---
interface Props {
  name: string;
  required?: boolean;
  placeholder?: string;
  title?: string;
}

const { name, title, required, placeholder } = Astro.props;
---

<textarea
  name={name}
  required={required}
  placeholder={placeholder}
  title={title}
  class="h-32 w-full p-3 rounded-md border focus:border-2 border-slate-600 resize-none outline-none"
></textarea>
