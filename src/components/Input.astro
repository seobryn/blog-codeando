---
interface Props {
  required?: boolean;
  type?: astroHTML.JSX.HTMLInputTypeAttribute;
  placeholder?: string;
  name?: string;
  pattern?: string;
  title?: string;
}

const {
  required,
  placeholder,
  pattern,
  title,
  type = "text",
  name,
} = Astro.props;
---

<input
  type={type}
  title={title}
  placeholder={placeholder}
  pattern={pattern}
  required={required}
  name={name}
  class="w-full h-9 px-3 border border-slate-900 rounded-md focus:border-slate-600 focus:border-2 outline-none"
/>
